<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record id="property_1" model="estate.property">
            <field name="name">Big Villa</field>
            <field name="status">new</field>
            <field name="description">A nice and big villa</field>
            <field name="postcode">12345</field>
            <field name="date_availability">2020-02-02</field>
            <field name="expected_price">1600000</field>
            <field name="bedrooms">6</field>
            <field name="living_area">100</field>
            <field name="facades">4</field>
            <field name="garage">True</field>
            <field name="garden_area">100000</field>
            <field name="garden_orientation">S</field>
            <field name="property_type_id" ref="estate.type_3" />
        </record>

        <record id="property_2" model="estate.property">
            <field name="name">Trailer home</field>
            <field name="status">canceled</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="selling_price">120000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">False</field>
            <field name="property_type_id" ref="estate.type_3" />
        </record>

        <record id="property_3" model="estate.property">
            <field name="name">Villa</field>
            <field name="status">offer_received</field>
            <field name="description">A nice and villa</field>
            <field name="postcode">23456</field>
            <field name="date_availability">2022-02-02</field>
            <field name="expected_price">1000000</field>
            <field name="bedrooms">3</field>
            <field name="living_area">50</field>
            <field name="facades">2</field>
            <field name="garage">True</field>
            <field name="garden_area">10000</field>
            <field name="garden_orientation">E</field>
            <field name="property_type_id" ref="estate.type_3" />
            <field name="offer_ids" eval="[
                Command.create({
                    'price' : 1300000,
                    'partner_id' : ref('base.res_partner_3'),
                    'validity' : 14 
                }),
                Command.create({
                    'price' : 2000000,
                    'partner_id' : ref('base.res_partner_3'),
                    'validity' : 14 
                }),
            ]"/>
        </record>

        <record id="property_4" model="estate.property">
            <field name="name">New Home</field>
            <field name="status">new</field>
            <field name="postcode">23456</field>
            <field name="date_availability">2022-12-12</field>
            <field name="expected_price">1000000</field>
            <field name="bedrooms">3</field>
            <field name="living_area">50</field>
            <field name="facades">2</field>
            <field name="garage">True</field>
            <field name="garden_area">100</field>
            <field name="garden_orientation">E</field>
            <field name="property_type_id" ref="estate.type_1" />
        </record>
    
        <record id="offer_1" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_1" />
            <field name="property_id" ref="estate.property_1" />
            <field name="price">10000</field>
            <field name="validity">14</field>
        </record>

        <record id="offer_2" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_1" />
            <field name="property_id" ref="estate.property_1" />
            <field name="price">1500000</field>
            <field name="validity">14</field>
        </record>

        <record id="offer_3" model="estate.property.offer">
            <field name="partner_id" ref="base.res_partner_3" />
            <field name="property_id" ref="estate.property_1" />
            <field name="price">1500001</field>
            <field name="validity">14</field>
        </record>

        <function model="estate.property.offer" name="action_offer_accepted">
            <value eval="[ref('offer_3')]" />
        </function>
        
        <function model="estate.property" name="action_property_sold">
            <value eval="[ref('property_1')]" />
        </function>
    </data>

</odoo>
